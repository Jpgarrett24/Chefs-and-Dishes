@model Wrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chefs</title>
</head>
<body>
    <header>
        <partial name="NavPartial" />
        <a href="/new">Add a Chef</a>
    </header>
    <main>
        <h1>Check out our roster of Chefs!</h1>
        <hr>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Chef chef in Model.AllChefs)
                {
                    int age = DateTime.Today.Year - chef.DOB.Year;
                    <tr>
                        <td>@chef.FirstName @chef.LastName</td>
                        <td>@age</td>
                        <td>@chef.CreatedDishes.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>